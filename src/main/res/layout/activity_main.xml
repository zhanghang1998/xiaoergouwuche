<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".MainActivity">


    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/imageView_taobao"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/taobao0111" />

    <EditText
        android:layout_below="@+id/imageView_taobao"
        android:id="@+id/editText_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="输入手机号" />

    <EditText
        android:id="@+id/editText_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_number"
        android:layout_marginTop="20dp"
        android:hint="输入密码" />


    <TextView
        android:id="@+id/textView_regiter"
        android:layout_below="@+id/editText_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="20dp"
        android:text="新用户注册" />

    <Button
        android:id="@+id/button_login"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:background="@drawable/bg_shape_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_regiter"
        android:text="登录" />

</RelativeLayout>